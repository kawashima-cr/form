generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model order_items {
  id         Int    @id @default(autoincrement())
  order_id   Int
  menu_id    String @db.VarChar(64)
  name       String @db.VarChar(255)
  qty        Int
  unit       String @db.VarChar(32)
  unit_price Int
  tax_rate   Int    @db.TinyInt
  amount     Int
  orders     orders @relation(fields: [order_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_order_items_order_id")

  @@index([order_id], map: "idx_order_items_order_id")
}

model orders {
  id          Int           @id @default(autoincrement())
  subtotal    Int
  tax         Int
  total       Int
  created_at  DateTime      @db.DateTime(0)
  order_items order_items[]
}

model users {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(40)
  age   Int
  email String @unique(map: "email") @db.VarChar(255)
}

